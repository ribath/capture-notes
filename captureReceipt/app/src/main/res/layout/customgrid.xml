<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:paddingLeft="6dp"
android:paddingTop="6dp"
android:paddingBottom="6dp"
android:orientation="vertical"
android:background="#E5E8E8"
android:layout_margin="5dp">

<ImageView
    android:layout_height="130dp"
    android:layout_width="130dp"
    app:srcCompat="@mipmap/ic_launcher"
    android:paddingLeft="10dp"
    android:id="@+id/imageView" />

<TextView
    android:id="@+id/pic_title"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text="Title"
    android:textColor="#000000"
    android:layout_below="@+id/imageView"
    android:layout_alignLeft="@+id/imageView"
    android:layout_alignStart="@+id/imageView" />

<TextView
    android:id="@+id/pic_address"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Address"
    android:textColor="#C39BD3"
    android:layout_below="@+id/pic_title"
    android:layout_alignLeft="@+id/pic_title"
    android:layout_alignStart="@+id/pic_title" />

<TextView
    android:id="@+id/pic_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Date"
    android:textColor="#FF5733"
    android:layout_below="@+id/pic_address"
    android:layout_alignLeft="@+id/pic_address"
    android:layout_alignStart="@+id/pic_address" />

</RelativeLayout>